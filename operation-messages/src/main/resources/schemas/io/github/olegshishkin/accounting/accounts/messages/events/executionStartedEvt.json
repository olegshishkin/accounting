{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "/schemas/events/account/transaction/executionStartedEvt",
  "title": "Execution started event",
  "type": "object",
  "javaInterfaces": [
    "io.github.olegshishkin.accounting.accounts.messages.Event"
  ],
  "required": [
    "header",
    "startedAt",
    "command"
  ],
  "properties": {
    "header": {
      "$ref": "../header.json"
    },
    "startedAt": {
      "title": "Execution start time",
      "format": "date-time"
    },
    "command": {
      "oneOf": [
        {
          "$ref": "../commands/applyTransactionCmd.json"
        },
        {
          "$ref": "../commands/cancelTransactionCmd.json"
        }
      ]
    }
  },
  "additionalProperties": false
}