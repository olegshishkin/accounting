{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "/schemas/header",
  "title": "Common schema header",
  "type": "object",
  "required": [
    "id",
    "time"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-f\\d]{4}(?:[a-f\\d]{4}-){4}[a-f\\d]{12}$"
    },
    "time": {
      "title": "Message creation time",
      "format": "date-time"
    }
  }
}