extend type Query {
    findOperations(filter: OperationFilter!): [Operation]!
}

type Operation {
    id: ID!
    createdAt: String!
    transactionId: String!
    account: OperationAccount!
    amount: Float!
}

# Projection of 'Account' from account.graphqls
type OperationAccount {
    id: ID!
    name: String!
}

input OperationFilter {
    transactionId: String
    accountId: ID
}